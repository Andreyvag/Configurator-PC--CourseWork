@model IEnumerable<Configurator_PC.Models.Configurator>

@{
    ViewData["Title"] = "Configurator";
}

<h1>The list of configurations</h1>

<p>
    <a asp-action="Create">Create new configuration</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            @*<th>
                @Html.DisplayNameFor(model => model.Power)
            </th>*@
            <th>
                @Html.DisplayNameFor(model => model.Processor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.VideoCard)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Motherboard)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cooling)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RAM)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SSD)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.HardDrive)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PowerSupply)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SoundCard)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NetworkAdapter)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            @*<td>
                @Html.DisplayFor(modelItem => item.Power)
            </td>*@
            <td>
                @Html.DisplayFor(modelItem => item.Processor.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.VideoCard.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Motherboard.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cooling.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RAM.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SSD.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HardDrive.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PowerSupply.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SoundCard.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NetworkAdapter.Id)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
